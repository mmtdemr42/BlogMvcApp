@model BlogMvcApp.Models.Blog

@{
    ViewBag.Title = "Blog Detay";
}


<h1>@Model.Title</h1>
<hr />
<p>
    <span class="glyphicon glyphicon-time"></span>
    @Model.AddBlogDate
</p>
<hr />
<img src="http://via.placeholder.com/700x300/" alt="" />
<blockquote class="blockquote">
    <p>
        @Model.Description
    </p>
</blockquote>
<p>
    @Model.Contents
</p>


<div class="comment">
    <div class="well">
        <h4>Yorum Yap</h4>
        <form role="form">
            <div class="form-group">
                <textarea class="form-control" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-success">Yorum Yap</button>
        </form>
    </div>
</div>

<div class="media">
    <img class="mr-3" src="https://placeholder.com/64x64/" alt="">
    <div class="media-body">
        <h5 class="mt-0">Media heading</h5>
